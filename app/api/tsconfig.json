{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                           
    "resolveJsonModule": true,                
    "isolatedModules": true,
    "noImplicitAny": false                   
  },
  "include": ["src/**/*.ts"],                 
  "exclude": ["node_modules"]
}
